body, html {
  height: 100%;
  margin: 0;
  overflow: hidden;
  display: block;
}

.bg-text {
  background-color: rgb(0,0,0); /* Fallback color */
  background-color: rgba(0,0,0, 0.4); /* Black w/opacity/see-through */
  color: white;
  font-weight: bold;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 2;
  width: 300px;
  height: 300px;
  padding: 20px;
  text-align: center;
}

.bg-image {
  background-image: url("background.jpg");
  filter: blur(4px);
  -webkit-filter: blur(4px);
  height: 100%; 
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
}

.inputtype {
	position: absolute;
	z-index: 1;
	top: 0px;
	left: 0px;
}

h1 {
	z-index: 1;
	position: flexible;
	text-align: center;
	font: serif;
}

.absolute {
	position: absolute;
}

button {
	z-index: 2;
	background-color: #4CAF50;
	border: none;
	color: white;
	padding: 10px 20px;
	text-align: center;
	text-decoration: none;
	display: inline-block;
	font-size: 16px;
	margin: 4px 2px;
	cursor: pointer;
	border-radius: 10px;
	transition: background-color 0.3s ease;
}

button:hover {
  background-color: #3691b0;
}


h2 {
	z-index: 2;
	color: beige;
	height: 100%
	width: 100%
	font: 30px serif;
}

.arrow-button {
  background-color: lightblue;
  border: none;
  color: black;
  padding: 10px 20px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 16px;
  cursor: pointer;
  margin: 1px;
  border-radius: 500px;
  transition: background-color 0.3s ease;
  z-index: 2;
}

.arrow {
  font-size: 20px;
}

.slider-container {
	margin-top: 30%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

input[type="range"]{
  background: transparent;
  border: none;
}


#difficulty {
  margin-bottom: 10px;
}

#sliderValue {
  margin-top: 10px;
}

.goNextButton {
	margin-top: 10px;
}

